                    </div>
                </div>
               
                <div class="col-md-2">
                    <div class="btn-group btn-group-justified">
                        <a asp-controller="Carreras" asp-action="Create" class="btn btn-primary">Carreras</a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="btn-group btn-group-justified">
                        <a href="AulaLinea.html" class="btn btn-primary">Aula</a>
                    </div>
                </div>
            </div>
            <hr>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title w-100 font-weight-bold">Marcar Entrada y Salida</h4>
                        </div>
                        <div class="modal-body text-center mb-1">
                            <h5 class="text-align-center" id="lbl_date">Fecha</h5>
                            <label class="text-align-center" id="lbl_time">00::00::00</label>
                            <div class="text-center mt-4">
                                <button type="button" class="btn btn-success">Marcar Entrada</button>
                                <button type="button" class="btn btn-danger">Marcar Salida</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="Permisos.html" class="btn btn-primary">Permisos</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a asp-controller="Nota" asp-action="Historico" class="btn btn-primary">Notas Estudiante</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a asp-controller="AsistenciaEstudiante" asp-action="Create" class="btn btn-primary"> Asistencia Estudiante</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a asp-controller="Cursos" asp-action="Create" class="btn btn-primary">  Curso</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a asp-controller="Grupo" asp-action="Index" class="btn btn-primary">  Grupo</a>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="btn-group btn-group-justified">

                        <a asp-controller="Rubros" asp-action="Index" class="btn btn-primary"> Rubros</a>
                    </div>
                </div>


            </div>



        </div>

    </div>

    <br />
    <br />

    <div class="container">

        <div class="row">

            <div class="col-md-2 col-md-offset-2">

                <!--	Begins Carrusel -->
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!--  Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="http://www.massey.ac.nz/massey/fms/campuses/images/auckland-campus1.jpg?29FF999425040D0915A4B70C364DFAB1" alt="Los Angeles" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="http://greatruns.com/wp-content/uploads/2017/03/OSU-Oval-700x400.jpeg" alt="Chicago" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="http://www.aalto.fi/fi/about/campus/havainnekuva.jpg" alt="New york" style="width:100%;">
                        </div>
                    </div>

                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
    </div>

    <!--ends Carrusel-->



</body>



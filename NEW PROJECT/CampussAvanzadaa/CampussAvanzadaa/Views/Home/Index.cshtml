    <br>
    <div class="buttons">

        <div class="container">

            <div class="row">


                <div class="col col-md-2">

                    <div class="btn-group btn-group-justified">
                        @*<a href="Matri.html" class="btn btn-primary">Matricula</a>*@
                        <a asp-controller="Matricula" asp-action="Index" class="btn btn-primary"> Matricula</a>

                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a asp-controller="Nota" asp-action="Ver" class="btn btn-primary">Notas Profesor</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="Label()">Marca Profesor</a>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="btn-group btn-group-justified">

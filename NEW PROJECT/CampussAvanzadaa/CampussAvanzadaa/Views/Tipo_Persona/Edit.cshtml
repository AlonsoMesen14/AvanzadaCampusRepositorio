@model CampussAvanzadaa.Model.TipoPersonaViewModel.EditarViewModel


<body class="body_registro">

    <section class="color_label_registro">

        <div class="container">
            <br />
            <br />
            <h3 class="titulos">Editar Tipo Persona</h3>
            <hr>
        </div>

        <div id="wrapper" class="container">

            <form method="post">

                <fieldset>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="TipoId"></label>

                            <select asp-for="TipoId" class="form-control" >

                                @foreach (var item in Model.Tipos)
                                {

                                    <option value="@item.IdTipoPersona">@item.Descripción</option>
                                }

                            </select>
                            <span asp-validation-for="TipoId"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="TipoNombre"></label>
                            <input asp-for="TipoNombre" class="form-control" placeholder="Doe" type="text">
                            <span asp-validation-for="TipoNombre"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark btn-lg btn_registrar">Crear <span class="fa fa-save" aria-hidden="true"></span></button>
                </fieldset>
            </form>
        </div>
        @*</div>
            </div>
            </div>*@
    </section>

</body>
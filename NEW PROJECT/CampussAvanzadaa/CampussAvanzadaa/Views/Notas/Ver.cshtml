@model CampussAvanzadaa.Model.NotasViewModel.VerViewModel
@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewBag.Title = Model.Title;
}
<header>
    <nav class="navbar navbar-toggleable-md navbar-inverse navbar-fixed-top bg-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Nota" asp-action="Ver">
                    <span class="fa fa-graduation-cap"></span> Notas
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Inicio" asp-action="Index">Inicio <span class="sr-only">(current)</span></a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Notas
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-controller="Nota" asp-action="Editar">Editar</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a asp-controller="Nota" asp-action="Ver">Ver</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" data-toggle="modal" data-target="#Asistencia"> <span class="fa fa-question-circle"></span> Asistencia Tecnica</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
</header>

<!-- Modal -->
<div class="modal fade" id="Asistencia" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Pongase en contacto con nosotros</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Identificacion</label>
                        <input type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Corta Descripcion:</label>
                        <input type="text" name="" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="alert('Pronto nos pondremos en contacto con usted')">Enviar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<body class="body_registro">
    <section class="color_label_registro">
        <div class="container">
            <br />
            <br />
            <h3 class="titulos">@ViewBag.Title</h3>
            <hr>
            <form method="post" action="/Nota/Ver">
                <div class="form-group">
                    <div class="col-md-12">
                        <fieldset>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>Información del Curso</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Nombre del Curso: Programación I</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Código del Curso: BSI - 03</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Grupo: 1</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Seleccionar Curso: </h4>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <select name="curso" class="form-control" required="">
                                            @foreach (var item in Model.Cursos)
                                            {

                                                <option value="@item.IdCurso">@{item.IdCurso + item.Descripcion}</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </form>
        </div>
        <br />
        <div id="contenido_tabla" class="container">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>Carné</th>
                                    <th>Estudiante</th>
                                    <th>Código Curso</th>
                                    <th>Carrera</th>
                                    <th>Nota</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var item in Model.Notas)
                                    {
                                        <th>@item.IdPersona</th>
                                        <td>@Model.NombreEstudiante</td>
                                        <td>@Model.CodigoCurso</td>
                                        <td>@Model.NombreCarrera</td>
                                        <td>@item.Nota</td>
                                        <td>@item.IndEstado</td>
                                    }
                                </tr>
                                @*<tr>
                                        <th>20160110202</th>
                                        <td>Johan Herrera Araya</td>
                                        <td>BSI-03</td>
                                        <td>Ingenería En Sistemas Informáticos</td>
                                        <td>95</td>
                                        <td>CA</td>
                                    </tr>*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>


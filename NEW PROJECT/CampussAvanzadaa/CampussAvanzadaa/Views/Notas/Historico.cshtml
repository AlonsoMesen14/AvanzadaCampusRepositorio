@model CampussAvanzadaa.Model.NotasViewModel.HistoricoViewModel
@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewBag.Title = Model.Title;
}
<body class="body_registro">
    <section class="color_label_registro">
        <div class="container">
            <br />
            <br />
            <h3 class="titulos">@ViewBag.Title</h3>
            <hr>
            <form id="form-work" name="form-work" action="#">
                <div class="form-group">
                    <div class="col-md-12">
                        <fieldset>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>Información del Estudiante</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Estudiante: @Model.NombreEstudiante</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4>Carné: @Model.Carne</h4>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </form>
        </div>
        <div id="contenido_tabla" class="container">
            <div class="form-group">
                <div class="col-md-3">
                    <label class="control-label" for="Buscar">Buscar:</label>
                    <input name="Buscar" class="form-control" type="text">
                </div>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <br />
                    <table class="table">
                        <thead class="thead-inverse">
                            <tr>
                                <th>Carrera</th>
                                <th>Período</th>
                                <th>Código Curso</th>
                                <th>Descripción</th>
                                <th>Nota</th>
                                <th>Estatus</th>
                            </tr>
                        </thead>
                        <tb>
                            <tr>
                                <th scope="row">@Model.NombreCarrera</th>
                                <td>@Model.Periodo</td>
                                <td>@Model.CodigoCurso</td>
                                <td>@Model.NombreCurso</td>
                                <td>@Model.Nota</td>
                                <td>@Model.Estado</td>
                            </tr>
                        </tb>
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>



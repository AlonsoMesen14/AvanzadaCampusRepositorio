<body class="body_registro">

    <section class="color_label_registro">

        <div class="container">
            <br />
            <br />
            <h3 class="titulos">Editar Persona</h3>
            <hr>

        </div>


        <div class="container">
            <fieldset>
                <form asp-controller="Registro" asp-action="Search" method="post">



                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-4">
                                <label asp-for="IdPersona" class="control-label" for="carnet">Carne</label>
                                <input asp-for="IdPersona" class="form-control" placeholder="201801110256" id="carne" type="number">
                            </div>

                            <div class="form-group">
                                <div class="col-md-4">
                                    @*  <input type="button" name="btn_buscar" class="btn_buscar" value="Buscar">*@

                                    <button type="submit" class="btn btn-dark btn-lg btn_registrar">
                                        Buscar
                                        <span class="fa fa-search" aria-hidden="true"></span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>



                </form>

                <form method="post">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-4">
                                <label asp-for="Nombre"  class="control-label" for="nome">Nombre</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Jon" type="text" required="true">
                            </div>


                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="control-label" for="apellido">Apellido</label>
                                    <input name="apellido" class="form-control" placeholder="Doe" type="text" required="true">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-4">
                                <label class="control-label" for="tel">Telefono</label>
                                <div class="input-group">
                                    <span class="input-group-addon">+506</span>
                                    <input name="tel" class="form-control" placeholder="12345678" type="number">
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="control-label" for="cedula">Cedula</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">ID</span>
                                        <input name="cedula" class="form-control" placeholder="000000000" type="number">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-offset-2 col-md-4">
                                    <label class="control-label" for="fecha">Fecha nacimiento</label>
                                    <input type="date" name="fecha" class="form-control">
                                </div>

                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label class="control-label" for="correo">Correo</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">e-</span>
                                            <input name="correo" class="form-control" placeholder="ejemplo@org.com" type="email" required="true">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-offset-2 col-md-4">
                                    <label class="control-label" for="sexo">Sexo</label>
                                    <select class="form-control" name="sexo">
                                        <option selected>Seleccione el sexo</option>
                                        <option value="1">Masculino</option>
                                        <option value="2">Femenino</option>
                                        <option value="3">Indefinido</option>
                                    </select>
                                </div>
                            </div>

                </form>
            </fieldset>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-4">
                    <button type="submit" class="btn btn-dark btn-lg btn_registrar" onclick="Validar_Edicion_Registro()">
                        Guardar
                        <span class="fa fa-save" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </section>
</body>
